<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentYoneticiIslemleri">

    <Button
        android:id="@+id/btnKutuphane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kütüphane"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKullaniciListesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Listesi"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKullaniciEkleSilDuzenle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Ekle/Sil/Düzenle"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKitapListesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitap Listesi"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKitapEkleSilDuzenle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitap Ekle/Sil/Düzenle"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKullanicidaOlanKitaplar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcıda Olan Kitaplar"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKategoriler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategoriler"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnIstatistikselRapo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İstatistiksel Rapor"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnMasaDurumu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masa Durumu"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/button_background"/>

</FrameLayout>