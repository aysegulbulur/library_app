<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YoneticiIslemleriActivity">

    <include layout="@layout/actionbar_app"
        android:id="@+id/actionbarYoneticiIslemleri"/>

    <Button
        android:id="@+id/btnKutuphane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kütüphane"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="430dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKullaniciListesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Listesi"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKullaniciEkleSilGuncelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Ekle/Sil/Güncelle"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="330dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKitapListesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitap Listesi"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKitapEkleSilGuncelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitap Ekle/Sil/Güncelle"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKullanicidaOlanKitaplar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcıda Olan Kitaplar"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnKategoriler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategoriler"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnIstatistikselRapor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İstatistiksel Rapor"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnMasaDurumu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masa Durumu"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

</RelativeLayout>