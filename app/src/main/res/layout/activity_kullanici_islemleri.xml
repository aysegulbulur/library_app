<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciIslemleriActivity">

    <include layout="@layout/actionbar_app"
        android:id="@+id/actionbarKullaniciIslemleri"/>

    <Button
        android:id="@+id/btnUzerimdekiKitaplar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Üzerimdeki Kitaplar"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btnIadeEttiklerim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İade Ettiklerim"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"/>

</RelativeLayout>